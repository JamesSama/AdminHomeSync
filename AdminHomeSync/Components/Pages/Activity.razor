@page "/activity"
@using AdminHomeSync.Components.Services
@using AdminHomeSync.Components.Model
@inject ActivityService ActivityService
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage
@inherits AuthenticatedPage
@rendermode InteractiveServer

<PageTitle>Activity</PageTitle>

<div class="activity-section">
    <div class="activity-outer-box">
        <h3>Activity</h3>

        <div class="activity-page">

            <!-- Error Message above the table -->
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger">@ErrorMessage</div>
            }

            <div class="activity-table-box">
                <div class="activity-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Date • Time</th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Action</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (activities == null || !activities.Any())
                            {
                                <tr class="warning-row">
                                    <td colspan="5">
                                        <div class="alert alert-warning">No Activities Found.</div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var activity in activities)
                                {
                                    <tr>
                                        <td>@activity.DateTime.ToString("MM/dd/yyyy • h:mm:ss tt")</td>
                                        <td>@activity.UserName</td>
                                        <td>@activity.Role</td>
                                        <td>@activity.Action</td>
                                        <td>@activity.Status</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<UserActivity> activities = new List<UserActivity>();
    private string ErrorMessage;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if a session exists in local storage
            var userProfile = await LocalStorage.GetItemAsync<UserData>("userProfile");

            if (userProfile == null)
            {
                // If there's no active session, redirect to the login page
                NavigationManager.NavigateTo("/", true); // true forces a full reload
                return; // Prevent further execution
            }

            // Proceed with the regular initialization of the activity page
            await InitializeActivitiesAsync();
        }
    }

    private async Task InitializeActivitiesAsync()
    {
        try
        {
            // Fetch activities from the ActivityService
            activities = (await ActivityService.FetchActivitiesFromFirebase())
                .OrderByDescending(a => a.DateTime)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading activities: {ex.Message}");
            ErrorMessage = "Something went wrong while loading the activities. Please try again later.";
        }

        StateHasChanged(); // Re-render the component with loaded data
    }
}
